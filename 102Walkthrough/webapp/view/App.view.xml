<mvc:View
   controllerName="ui5.walkthrough.controller.App"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc"
   displayBlock="true">
      <Panel>
            <Text text="Hello APP -->App.view.xml"
              width="auto"/>

            <Button
            text="{i18n>showHelloButtonTextUI5}"
            press=".onShowHelloUI5"
			icon="sap-icon://Netweaver-business-client"/>

            <!-- <ui5-button>Press</ui5-button>
            <ui5-button icon="sap-icon://edit">Edit</ui5-button>
            <ui5-button disabled>Merge</ui5-button> -->

      </Panel>

      <Button
            text="{i18n>showHelloButtonTextJavaScript}"
            press=".onShowHelloJavaScript"
			icon="sap-icon://physical-activity"/>
      <Shell>
		<App class="myAppDemoWT"
			 id="app">
			<pages>
				<Page title="{i18n>homePageTitle}">
					<content>
						<!-- Nestted views  -->
						<mvc:XMLView viewName="ui5.walkthrough.view.HelloPanel"/>
						<mvc:XMLView viewName="ui5.walkthrough.view.InvoiceList"/>
						<Panel
							headerText="{i18n>helloPanelTitle}"
							class="sapUiResponsiveMargin"
							width="auto">
							<content>
								<Button
									text="{i18n>showHelloButtonText}"
									icon="sap-icon://cargo-train"
									press=".onShowInput"
									class="myCustomButton"/>
								<Button
									id="helloDialogButton_button23"
									text="{i18n>openDialogButtonText_button23}"
									icon="sap-icon://Netweaver-business-client"
									press=".onOpenDialog"
									class="sapUiSmallMarginEnd"/>
								<Input
									value="{/recipient/name}"
									valueLiveUpdate="true"
									width="50%"/>
								<Text
									text="Hello {/recipient/name}"
									class="sapUiSmallMargin"/>
                                                <FormattedText
									htmlText="Hello {/recipient/name}"
									class="sapUiSmallMargin sapThemeHighlight-asColor myCustomText"/>
							</content>
						</Panel>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
      <!-- <Shell>    
       <Button
            text="{i18n>showHelloButtonTextJavaScript}"
            press=".onShowHelloJavaScript"/>
      </Shell>   -->
</mvc:View>