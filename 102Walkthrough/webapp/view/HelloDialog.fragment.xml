<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core">
   <Dialog
      id="helloDialog"
      title="Hello {/recipient/name}">
      <content>
         <core:Icon
            src="sap-icon://hello-world"
            size="8rem"
            class="sapUiMediumMargin"/>
      </content>
      <beginButton>
         <Button
            id = "OK_CloseButton"
            text="{i18n>dialogCloseButtonText}"
            icon="sap-icon://fallback"
            press=".onCloseDialog"/>
      </beginButton>
    </Dialog> 
</core:FragmentDefinition>